<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lumiere.Pages.Home"
            xmlns:tab="clr-namespace:Lumiere.Pages.tabbed"
             xmlns:pages="clr-namespace:Lumiere.Pages">
  <FlyoutPage.Flyout>
    <pages:HomeFlyout x:Name="FlyoutPage" />
  </FlyoutPage.Flyout>
  <FlyoutPage.Detail>
        <NavigationPage BarBackground="black" >
      <x:Arguments>
        <tab:MainTabbedPage />
      </x:Arguments>
    </NavigationPage>
  </FlyoutPage.Detail>
</FlyoutPage>