<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lumiere.Pages.PageFunctions.SendMoneyPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Amount to send: " />
            <Entry x:Name="txtAmountSent"/>
            <Label Text="Phone number: " />
            <Entry x:Name="txtPhoneNumber"/>
            <Label Text="Name of recepient: " />
            <Entry x:Name="txtNameOfRecepient"/>
            <Button x:Name="btnSend"
                    Text="Send"
                    Clicked="btnSend_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>