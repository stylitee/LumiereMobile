                        <Frame CornerRadius="10"
                           HasShadow="True">
                            <StackLayout Orientation="Horizontal">
                                <Label Text="Regular Load 500"
                                   TextColor="Black"
                                   Margin="0,13,0,0"/>
                                <Button x:Name="btnSmartReg500" 
