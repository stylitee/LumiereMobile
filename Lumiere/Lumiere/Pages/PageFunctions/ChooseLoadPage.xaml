<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lumiere.Pages.PageFunctions.ChooseLoadPage"
             BackgroundColor="Black"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                
                
                <Frame Margin="10,20,10,20"
                   BackgroundColor="White"
                   CornerRadius="10"
                   HasShadow="True"
                   OutlineColor="#edeef7" 
                   Padding="12">
                    <StackLayout>
                        <Image x:Name="imgGlobeLogo"
                       HeightRequest="50"
                       WidthRequest="100"
                               Margin="0,10,0,20"/>
                        <Frame CornerRadius="10"
                           HasShadow="True"
                               BackgroundColor="#2D2D30">
                            <StackLayout Orientation="Horizontal">
                                <Label Text="Regular Load 10"
                                   TextColor="White"
                                   Margin="0,13,0,0"/>
                                <Button  
                                    x:Name="btnGlobeReg10"
                                    Margin="80,0,0,0"
                                    Text="Load"
                                    Clicked="btnGlobeReg10_Clicked"/>
                            </StackLayout>
                        </Frame>
                        <Frame CornerRadius="10"
                           HasShadow="True">
                            <StackLayout Orientation="Horizontal">
                                <Label Text="Regular Load 20"
                                   TextColor="Black"
                                   Margin="0,13,0,0"/>
